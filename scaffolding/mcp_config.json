{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "swarm-tools": {
      "command": "bun",
      "args": [
        "run",
        "swarm-tools/packages/opencode-swarm-plugin/claude-plugin/bin/swarm-mcp-server.ts"
      ]
    }
  }
}
